            $('#y').val(Math.round(c.y));
            $('#w').val(Math.round(c.w));
            $('#h').val(Math.round(c.h));
            $('#coordenadas').html(Math.round(c.w)+' X '+Math.round(c.h));
        };
        $('#fotoFachada').Jcrop({
            onChange: coordenadas,
            minSize: [600,450],
            aspectRatio: 600/450,
            setSelect: [50,50,100,100],
            bgColor: 'transparent'
        });
    }
</script>

